version: 0.2

phases:
  pre_build:
    commands:
      - echo Logging in to ECR...
      - aws ecr get-login-password --region $AWS_REGION | docker login --username AWS --password-stdin $ACCOUNT_ID.dkr.ecr.$AWS_REGION.amazonaws.com
  build:
    commands:
      - echo Building Docker image...
      - docker build -t myapp:latest .
      - docker tag myapp:latest $ACCOUNT_ID.dkr.ecr.$AWS_REGION.amazonaws.com/myapp:latest
  post_build:
    commands:
      - echo Pushing image...
      - docker push $ACCOUNT_ID.dkr.ecr.$AWS_REGION.amazonaws.com/myapp:latest
      - printf '[{"name":"container","imageUri":"%s"}]' "$ACCOUNT_ID.dkr.ecr.$AWS_REGION.amazonaws.com/myapp:latest" > imagedefinitions.json

artifacts:
  files:
    - imagedefinitions.json
